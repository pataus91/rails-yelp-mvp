<div class="container mt-5">
  <h1 class="text-center"> Restaurant List </h1>
  <div class="list-group">
    <% @restaurants.each do |restaurant| %>
        <div class="list-group-item list-group-item-action col-6 m-auto"><%= link_to restaurant.name, restaurant_path(restaurant) %></div>
    <% end %>
    <%= link_to '<i class="fas fa-plus"></i> Add a new task'.html_safe, new_restaurant_path, class: "btn btn-primary btn-lg col-6 ml-auto mt-1 mr-auto" %>
  </div>
</div>
